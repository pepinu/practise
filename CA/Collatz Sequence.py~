result = []
loops = int(raw_input())
nums = raw_input().split()
nums = map(int, nums)
for i in nums:
    cnt = 0;
    while i != 1:
        cnt += 1
        if i % 2 == 0 :
            i /= 2
        else:
            i *= 3
            i += 1
    result.append(i)
print " ".join(map(str, result))
        

